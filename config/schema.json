{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://hashicorp.com/schemas/consul-ecs",
  "title": "Consul ECS Configuration",
  "description": "Configuration for the consul-ecs binary",
  "type": "object",
  "properties": {
    "bootstrapDir": {
      "description": "The directory of the shared data volume where Envoy bootstrap configuration is written.",
      "type": "string",
      "minLength": 1
    },
    "healthSyncContainers": {
      "description": "The names of containers that will have health check status synced from ECS into Consul. Cannot be specified with service.checks.",
      "type": ["array", "null"],
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "service": {
      "description": "Configuration for Consul service registration.",
      "type": "object",
      "properties": {
        "name": {
          "description": "The name the service will be registered as in Consul. Defaults to the Task family name if empty or null.",
          "type": ["string", "null"]
        },
        "tags": {
          "type": ["array", "null"],
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "port": {
          "type": "integer"
        },
        "enableTagOverride": {
          "type": ["boolean", "null"]
        },
        "meta": {
          "type": ["object", "null"],
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          }
        },
        "weights": {
          "type": ["object", "null"],
          "properties": {
            "passing": {
              "type": "integer"
            },
            "warning": {
              "type": "integer"
            }
          },
          "required": ["passing", "warning"],
          "additionalProperties": false
        },
        "checks": {
          "description": "Consul checks for the service. Cannot be specified with healthSyncContainers.",
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "properties": {
              "checkId": {
                "type": ["string", "null"]
              },
              "name": {
                "type": "string"
              },
              "args": {
                "type": ["array", "null"],
                "items": {
                  "type": "string"
                }
              },
              "interval": {
                "type": ["string", "null"]
              },
              "timeout": {
                "type": ["string", "null"]
              },
              "ttl": {
                "type": ["string", "null"]
              },
              "http": {
                "type": ["string", "null"]
              },
              "header": {
                "type": ["object", "null"],
                "patternProperties": {
                  ".*": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              },
              "method": {
                "type": ["string", "null"]
              },
              "body": {
                "type": ["string", "null"]
              },
              "tcp": {
                "type": ["string", "null"]
              },
              "status": {
                "type": ["string", "null"],
                "enum": ["passing", "warning", "critical", "maintenance", null]
              },
              "notes": {
                "type": ["string", "null"]
              },
              "tlsServerName": {
                "type": ["string", "null"]
              },
              "tlsSkipVerify": {
                "type": ["boolean", "null"]
              },
              "grpc": {
                "type": ["string", "null"]
              },
              "grpcUseTls": {
                "type": ["boolean", "null"]
              },
              "h2ping": {
                "description": "Specifies this is an h2ping check. Must be an address, which will be pinged every `interval`.",
                "type": ["string", "null"]
              },
              "h2pingUseTls": {
                "description": "Specifies whether TLS is used for an h2ping check.",
                "type": ["boolean", "null"]
              },
              "aliasNode": {
                "type": ["string", "null"]
              },
              "aliasService": {
                "type": ["string", "null"]
              },
              "successBeforePassing": {
                "type": ["integer", "null"]
              },
              "failuresBeforeCritical": {
                "type": ["integer", "null"]
              }
            },
            "additionalProperties": false
          }
        },
        "namespace": {
          "type": ["string", "null"]
        },
        "partition": {
          "description": "The Consul admin partition where the service will be registered.",
          "type": ["string", "null"]
        }
      },
      "required": ["port"],
      "additionalProperties": true
    },
    "proxy": {
      "description": "Configuration for the sidecar proxy registration.",
      "type": ["object", "null"],
      "properties": {
        "config": {
          "type": ["object", "null"]
        },
        "upstreams": {
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "properties": {
              "destinationType": {
                "type": ["string", "null"],
                "enum": ["service", "prepared_query", null]
              },
              "destinationNamespace": {
                "type": ["string", "null"]
              },
              "destinationPartition": {
                "description": "The name of the admin partition containing the upstream service.",
                "type": ["string", "null"]
              },
              "destinationName": {
                "type": "string"
              },
              "datacenter": {
                "type": ["string", "null"]
              },
              "localBindAddress": {
                "type": ["string", "null"]
              },
              "localBindPort": {
                "type": "integer"
              },
              "config": {
                "type": ["object", "null"]
              },
              "meshGateway": {
                "type": ["object", "null"],
                "properties": {
                  "mode": {
                    "enum": ["none", "local", "remote"]
                  }
                },
                "required": ["mode"]
              }
            },
            "required": ["destinationName", "localBindPort"],
            "additionalProperties": false
          }
        },
        "meshGateway": {
          "type": ["object", "null"],
          "properties": {
            "mode": {
              "enum": ["none", "local", "remote"]
            }
          },
          "required": ["mode"]
        }
      },
      "expose": {
        "type": ["object", "null"],
        "properties": {
          "checks": {
            "type": "boolean"
          },
          "paths": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "listenerPort": {
                  "type": "integer"
                },
                "path": {
                  "type": "string"
                },
                "localPathPort": {
                  "type": "integer"
                },
                "protocol": {
                  "enum": ["http", "http2"]
                }
              }
            }
          }
        }
      }
    },
    "gateway": {
      "description": "Configuration for the gateway proxy registration.",
      "type": "object",
      "properties": {
        "kind": {
          "description": "The gateway kind.",
          "type": "string",
          "enum": ["mesh-gateway", "terminating-gateway", "ingress-gateway"]
        },
        "lanAddress": {
          "description": "LAN address and port for the gateway. If not specified, defaults to the task/node address.",
          "type": "object",
          "properties": {
            "address": {
              "type": "string"
            },
            "port": {
              "type": "integer"
            }
          },
          "additionalProperties": false
        },
        "wanAddress": {
          "description": "WAN address and port for the gateway. If not specified, defaults to the task/node address.",
          "type": "object",
          "properties": {
            "source": {
              "type": "string",
              "enum": ["publicIP", "loadBalancerDNS", ""]
            },
            "address": {
              "type": "string"
            },
            "port": {
              "type": "integer"
            }
          },
          "additionalProperties": false
        },
        "name": {
          "description": "The name the service will be registered as in Consul. Defaults to the Task family name.",
          "type": ["string", "null"]
        },
        "tags": {
          "type": ["array", "null"],
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "meta": {
          "type": ["object", "null"],
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          }
        },
        "namespace": {
          "type": ["string", "null"]
        },
        "partition": {
          "type": ["string", "null"]
        },
        "proxy": {
          "type": ["object", "null"],
          "properties": {
            "config": {
              "type": ["object", "null"]
            }
          }
        }
      },
      "required": ["kind"]
    },
    "additionalProperties": false
  },
  "required": ["bootstrapDir"],
  "additionalProperties": false
}
